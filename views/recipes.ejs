<!-- view template to  render a webpage that displays a list of recipes in a dropdown menu. 
The recipes are dynamically populated. -->
<!DOCTYPE html>
<html>
<head>
  <link rel = "stylesheet" href = "/styles.css">
</head>
<body>
  <h1>Recipe List</h1>
  <form>
    <label for="recipe-select">Choose a recipe:</label>
    <select id="recipe-select" name="recipe">
      <% for (let i = 0; i < recipes.length; i++) { %>
        <option value="<%= recipes[i].id %>"><%= recipes[i].recipename %></option>
      <% } %>
    </select>
  </form>

</body>
</html>